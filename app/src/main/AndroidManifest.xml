<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.grocerie"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.android.grocerie.HomePage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.example.android.grocerie.ShoppingList"
            android:parentActivityName="com.example.android.grocerie.HomePage">

        </activity>
        <activity
            android:name="com.example.android.grocerie.IngredientsList"
            android:parentActivityName="com.example.android.grocerie.HomePage">

        </activity>
        <activity android:name="com.example.android.grocerie.IngredientEditor"
            android:parentActivityName="com.example.android.grocerie.IngredientsList">

        </activity>
        <provider
            android:name=".data.IngredientProvider"
            android:authorities="com.example.android.grocerie"
            android:exported="false" />
    </application>

</manifest>